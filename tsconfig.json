{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist/esm",
    "baseUrl": ".",
    "rootDir": "src",
    "declaration": true,
    "paths": {
      "compareq": ["./declaration.d.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["rollup.config.ts", "tests"],
  "plugins": ["typescript-eslint-language-service"]
}
